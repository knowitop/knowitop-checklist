      <methods>
        <method id="DoCreateTargetObject">
          <comment><![CDATA[	/**
	 * @param \DBObject|null $oTicket
	 * @param array $aContextArgs
	 *
	 * @return \WorkOrder
	 * @throws \ArchivedObjectException
	 * @throws \CoreException
	 * @throws \Exception
	 */]]></comment>
          <static>false</static>
          <access>protected</access>
          <type>Internal</type>
          <code><![CDATA[	protected function DoCreateTargetObject(DBObject $oTicket = null, array $aContextArgs = array())
	{
		$this->ValidateContextObject($oTicket);
		$aParams = array_merge($this->ToArgs('template'), $oTicket->ToArgs('context'), $aContextArgs);
		$aValues = [
			'ticket_id' => $oTicket->GetKey(),
			'name' => MetaModel::ApplyParams($this->Get('wo_name'), $aParams),
			'description' => MetaModel::ApplyParams($this->Get('wo_description'), $aParams),
			'team_id' => $this->Get('wo_team_id'),
			'agent_id' => $this->Get('wo_agent_id'),
			'start_date' => time(),
			'end_date' => time() + $this->Get('wo_duration')
		];
		/** @var \WorkOrder $oWorkOrder */
		$oWorkOrder = MetaModel::NewObject('WorkOrder', $aValues);

		return $oWorkOrder;
	}]]></code>
        </method>
        <method id="ValidateContextObject">
          <comment><![CDATA[	/**
	 * @param \DBObject $oTicket
	 *
	 * @return void
	 * @throws \Exception
	 */]]></comment>
          <static>false</static>
          <access>public</access>
          <type>Internal</type>
          <code><![CDATA[	public function ValidateContextObject(DBObject $oTicket)
	{
		if (is_null($oTicket))
		{
			throw new Exception('Cannot create a new '.$this->GetTargetClass().' from '.get_class($this).'::'.$this->GetKey().': the context object is not passed (Ticket expected).');
		}
		if (!($oTicket instanceof Ticket))
		{
			throw new Exception('Cannot create a new '.$this->GetTargetClass().' from '.get_class($this).'::'.$this->GetKey().': the context object is '.get_class($oTicket).' (Ticket expected).');
		}
	}]]></code>
        </method>
