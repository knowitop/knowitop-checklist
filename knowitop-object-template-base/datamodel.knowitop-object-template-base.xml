        <method id="CreateTargetObject">
          <comment><![CDATA[	/**
	 * @param \DBObject|null $oContextObject
	 * @param array $aContextArgs
	 *
	 * @return \DBObject
	 * @throws \CoreException
	 * @throws \CoreUnexpectedValue
	 */]]></comment>
          <static>false</static>
          <access>public</access>
          <type>Internal</type>
          <code><![CDATA[	public final function CreateTargetObject(DBObject $oContextObject = null, array $aContextArgs = array())
	{
		if (!MetaModel::IsValidAttCode($this->GetTargetClass(), 'template_key'))
		{
			throw new Exception("Cannot create a new object from template: target template class '{$this->GetTargetClass()}' MUST have 'template_key' integer attcode for creating objects from template.");
		}
		$oTargetObject = $this->DoCreateTargetObject($oContextObject, $aContextArgs);
		$this->ValidateTargetObject($oTargetObject);
		$oTargetObject->Set('template_key', $this->GetKey());

		return $oTargetObject;
	}]]></code>
        </method>
        <method id="GetTargetClass">
          <comment><![CDATA[	/**
	 * @return string
	 */]]></comment>
          <static>false</static>
          <access>public</access>
          <type>Internal</type>
          <code><![CDATA[	abstract public function GetTargetClass();]]></code>
        </method>
        <method id="ValidateTargetObject">
          <comment><![CDATA[	/**
	 * @param \DBObject $oTargetObject
	 *
	 * @throws \CoreException
	 * @throws \Exception
	 */]]></comment>
          <static>false</static>
          <access>protected</access>
          <type>Internal</type>
          <code><![CDATA[	protected function ValidateTargetObject(DBObject $oTargetObject)
	{
		if (!MetaModel::IsParentClass($this->GetTargetClass(), get_class($oTargetObject)))
		{
			$sClass = get_class($oTargetObject);
			throw new Exception("Cannot create a new object from template: class '$sClass' is not child for target template class '{$this->GetTargetClass()}'");
		}
	}
]]></code>
        </method>
        <method id="DisplayBareProperties">
          <static>false</static>
          <access>public</access>
          <type>Overload-cmdbAbstractObject</type>
          <code><![CDATA[	public function DisplayBareProperties(WebPage $oPage, $bEditMode = false, $sPrefix = '', $aExtraParams = array())
	{
		if ($bEditMode)
		{
			$sLabel = Dict::S('UI:'.get_class($this).':HelpBlockLabel');
			$sContent = Dict::S('UI:'.get_class($this).':HelpBlockContent', '');
			if (!empty($sContent))
			{
				$oHtml = new \Combodo\iTop\Application\UI\Base\Component\Html\Html($sContent);
				$oUIBlock = new \Combodo\iTop\Application\UI\Base\Component\CollapsibleSection\CollapsibleSection($sLabel, [$oHtml]);
				$oPage->AddUiBlock($oUIBlock);
			}
		}

		return parent::DisplayBareProperties($oPage, $bEditMode, $sPrefix, $aExtraParams);
	}]]></code>
